{
  "name": "clone-tabsnew",
  "version": "1.0.0",
  "description": "Projeto para melhorar conhecimentos em programação com curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run service:up && npm run wait-postgres && npm run migrations:up && next dev",
    "service:up": "docker compose -f infra/compose.yaml up -d",
    "service:down": "docker compose -f infra/compose.yaml down",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "npm run service:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phlbarreto/clone-tabsnew.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phlbarreto/clone-tabsnew/issues"
  },
  "homepage": "https://github.com/phlbarreto/clone-tabsnew#readme",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.6.2",
    "prettier": "^3.6.2"
  }
}